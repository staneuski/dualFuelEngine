cd ${0%/*} || exit 1 # Run from this directory

# Corrections in the solvers/
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~
#- Correct multiCompressionFoam.C
sed -i "s/setRootCaseLists.H/setRootCase.H/g"\
    ../solvers/multiCompressionFoam/multiCompressionFoam.C
sed -i "s/simple.loop(runTime)/simple.loop()/g"\
    ../solvers/multiCompressionFoam/multiCompressionFoam.C

#- Correct multiCompressionFoamDyM.C
sed -i "s/setRootCaseLists.H/setRootCase.H/g"\
    ../solvers/multiCompressionFoam/multiCompressionFoamDyM/multiCompressionFoamDyM.C
sed -i "s/simple.loop(runTime)/simple.loop()/g"\
    ../solvers/multiCompressionFoam/multiCompressionFoamDyM/multiCompressionFoamDyM.C


# Corrections in the tutorials/multiCompressionFoam/
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#- Remove .orig extenstions
for i in ../tutorials/multiCompressionFoam/cylPiston/0/*.orig; do mv -i "$i" "${i%.orig}"; done
for i in ../tutorials/multiCompressionFoam/quadPiston/0/*.orig; do mv -i "$i" "${i%.orig}"; done
for i in ../tutorials/multiCompressionFoam/RiemannTube/0/*.orig; do mv -i "$i" "${i%.orig}"; done
for i in ../tutorials/multiCompressionFoam/tube/0/*.orig; do mv -i "$i" "${i%.orig}"; done

#- Correct quadPiston case
sed -i "s/surfaceFeatures/surfaceFeatureExtract/g"\
    ../tutorials/multiCompressionFoam/quadPiston/makeMesh
mv ../tutorials/multiCompressionFoam/quadPiston/system/surfaceFeaturesDict\
    ../tutorials/multiCompressionFoam/quadPiston/system/surfaceFeatureExtractDict
sed -i "s+mesh/generation/meshQualityDict.cfg+meshQualityDict+g"\
    ../tutorials/multiCompressionFoam/quadPiston/system/meshQualityDict

#- Correct cylPiston case
sed -i "s/surfaceFeatures/surfaceFeatureExtract/g"\
    ../tutorials/multiCompressionFoam/cylPiston/makeMesh
mv ../tutorials/multiCompressionFoam/cylPiston/system/surfaceFeaturesDict\
    ../tutorials/multiCompressionFoam/cylPiston/system/surfaceFeatureExtractDict
sed -i "s+mesh/generation/meshQualityDict.cfg+meshQualityDict+g"\
    ../tutorials/multiCompressionFoam/cylPiston/system/meshQualityDict


# Corrections in the tutorials/multiCompressionFoamDyM
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#- Remove .orig extenstions
for i in ../tutorials/multiCompressionFoamDyM/movingWallTube/0/*.orig; do mv -i "$i" "${i%.orig}"; done


# Corrections in other folders (in the tutorials/)
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
for i in ../tutorials/potentialFoam/prism/0/*.orig; do mv -i "$i" "${i%.orig}"; done
for i in ../tutorials/potentialFoam/quadPiston/0/*.orig; do mv -i "$i" "${i%.orig}"; done

for i in ../tutorials/scalarTransportFoam/prism/0/*.orig; do mv -i "$i" "${i%.orig}"; done
for i in ../tutorials/scalarTransportFoam/quadPiston/0/*.orig; do mv -i "$i" "${i%.orig}"; done

#------------------------------------------------------------------------------
