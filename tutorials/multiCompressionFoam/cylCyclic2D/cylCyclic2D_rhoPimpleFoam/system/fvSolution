FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver           diagonal;
    }
    p
    {
        solver           GAMG;
        smoother         DICGaussSeidel;
        tolerance        1e-7;
        relTol           0.01;
    }
    "(p|rho)Final"
    {
        $p;
        relTol          0;
    }
    "pcorr.*"
    {
        $p;
        tolerance       1e-2;
        relTol          0;
    }

    "(U|e)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-05;
        relTol          0.1;
    }
    "(U|e)Final"
    {
        $U;
        relTol          0;
    }

    "cellMotionU.*"
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-08;
        relTol          0;
    }
}

PIMPLE
{
    nCorrectors          2;
    // nOuterCorrectors     2;
    nNonOrthogonalCorrectors 0;

    correctPhi          true;
    checkMeshCourantNo  true;

    transonic           false;
}


