        zoneName    innerCouple1Faces;

        patches
        {
            master
            {
                //- Master side patch
                name            innerACMI1_couple;
                type            cyclicACMI;
                matchTolerance  0.0001;
                neighbourPatch  innerACMI2_couple;
                nonOverlapPatch innerACMI1_blockage;
                // transform       noOrdering; /* OpenFOAM v7 or lower */
