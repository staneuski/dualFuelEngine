FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0]; // K

internalField   uniform 0;

injection	 	1;

inlet	 		1;

boundaryField
{
    // Injection
	injectionXMinus
    {
        type            fixedValue;
        value           uniform $injection;
    }
	injectionXPlus
    {
        type            fixedValue;
        value           uniform $injection;
    }
	injectionYMinus
    {
        type            fixedValue;
        value           uniform $injection;
    }
	injectionYPlus
    {
        type            fixedValue;
        value           uniform $injection;
    }

	// Inlet
	inletXMinus
    {
        type            fixedValue;
        value           uniform $inlet;
    }
	inletXPlus
    {
        type            fixedValue;
        value           uniform $inlet;
    }
	inletYMinus
    {
        type            fixedValue;
        value           uniform $inlet;
    }
	inletYPlus
    {
        type            fixedValue;
        value           uniform $inlet;
    }

	// Other
    outlet
    {
        type            zeroGradient;
    } // outlet
    valve
    {
        type            zeroGradient;
    } // valve
    walls
    {
        type            zeroGradient;
    } // walls
}

